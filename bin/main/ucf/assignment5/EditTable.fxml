<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="550.0" prefWidth="850.0" styleClass="root" stylesheets="@TableCSS.css" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1">
   <center>
      <TableView fx:id="wholeTableObject" nodeOrientation="LEFT_TO_RIGHT" onMouseClicked="#clickTableItem">
        <columns>
          <TableColumn fx:id="valueColumn" maxWidth="-1.0" minWidth="200.0" prefWidth="-1.0" text="Value" />
          <TableColumn fx:id="serialNumberColumn" maxWidth="-1.0" minWidth="200.0" prefWidth="-1.0" text="Serial Number" />
            <TableColumn fx:id="nameColumn" maxWidth="-1.0" minWidth="200.0" prefWidth="-1.0" text="Name" />
        </columns>
      </TableView>
   </center>
   <bottom>
      <HBox fillHeight="false" prefHeight="7.0" BorderPane.alignment="CENTER" />
   </bottom>
   <right>
      <VBox alignment="TOP_CENTER" prefWidth="220.0" spacing="87.0">
         <children>
            <VBox alignment="TOP_CENTER" spacing="10.0">
               <children>
                  <Button fx:id="TopButton" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#addItemButton" prefWidth="200.0" text="Add New Item" textAlignment="CENTER" VBox.vgrow="ALWAYS" />
               </children>
            </VBox>
            <VBox spacing="50.0">
               <children>
                  <VBox>
                     <children>
                        <Label text="Value:" />
                        <TextField fx:id="ValueBox" alignment="CENTER" promptText="Value" styleClass="textfield" />
                     </children>
                  </VBox>
                  <VBox>
                     <children>
                        <Label text="Serial Number:" />
                        <TextField fx:id="SerialBox" alignment="CENTER" promptText="Serial Number" styleClass="textfield" />
                     </children>
                  </VBox>
                  <VBox>
                     <children>
                        <Label text="Name:" />
                        <TextField fx:id="NameBox" alignment="CENTER" promptText="Name" styleClass="textfield" />
                     </children>
                  </VBox>
               </children>
            </VBox>
            <VBox>
               <children>
                  <Label fx:id="removeLabel" text="Remove By:" />
                  <HBox alignment="TOP_CENTER" spacing="10.0">
                     <children>
                        <Button fx:id="bottomLeftButton" mnemonicParsing="false" onAction="#removeItemSerialButton" prefWidth="100.0" text="Serial Number" />
                        <Button fx:id="bottomRightButton" mnemonicParsing="false" onAction="#removeItemNameButton" prefWidth="100.0" text="Name" />
                     </children>
                  </HBox>
               </children>
            </VBox>
         </children>
         <BorderPane.margin>
            <Insets />
         </BorderPane.margin>
         <padding>
            <Insets left="7.0" right="7.0" />
         </padding></VBox>
   </right>
   <left>
      <VBox prefWidth="7.0" BorderPane.alignment="CENTER" />
   </left>
   <top>
      <HBox BorderPane.alignment="CENTER">
         <children>
            <MenuBar prefHeight="32.0" HBox.hgrow="ALWAYS">
              <menus>
                  <Menu mnemonicParsing="false">
                     <graphic>
                        <Button mnemonicParsing="false" onAction="#HomeScreenButton" text="Home" />
                     </graphic>
                  </Menu>
                <Menu mnemonicParsing="false">
                     <graphic>
                        <Button mnemonicParsing="false" onAction="#SearchTableButton" text="Search" />
                     </graphic>
                </Menu>
                  <Menu mnemonicParsing="false">
                     <graphic>
                        <Button mnemonicParsing="false" onAction="#EditTableButton" text="Edit" />
                     </graphic>
                  </Menu>
                <Menu mnemonicParsing="false">
                  <items>
                    <MenuItem mnemonicParsing="false" onAction="#saveFile" text="Save File" />
                        <MenuItem mnemonicParsing="false" onAction="#loadFile" text="Load File" />
                  </items>
                     <graphic>
                        <Button mnemonicParsing="false" text="File" />
                     </graphic>
                </Menu>
                  <Menu mnemonicParsing="false">
                     <graphic>
                        <Button mnemonicParsing="false" onAction="#help" text="Help" />
                     </graphic>
                  </Menu>
              </menus>
            </MenuBar>
         </children>
         <padding>
            <Insets bottom="7.0" />
         </padding>
      </HBox>
   </top>
</BorderPane>
